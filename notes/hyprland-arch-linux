sudo pacman -S pipewire wireplumber pipewire-audio pipewire-pulse pipewire-bluetooth pipewire-alsa pipewire-jack alsa-utils
systemctl --user enable --now pipewire
systemctl --user enable --now wireplumber
systemctl --user enable --now pipewire-pulse
# - for sound & obs

